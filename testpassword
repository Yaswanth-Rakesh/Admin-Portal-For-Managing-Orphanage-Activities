<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Reset Password</title>
  <style>
    body { font-family: Arial, sans-serif; margin: 30px; }
    .hidden { display: none; }
    input { margin: 5px; padding: 8px; }
    button { padding: 8px 12px; margin: 5px; cursor: pointer; }
  </style>
</head>
<body>
  <h2>Reset Your Password</h2>

  <form id="resetForm">
    <div>
      <label>OTP:</label>
      <input type="text" id="otp" required>
      <button type="button" id="verifyBtn">Verify</button>
    </div>

    <div id="passwordFields" class="hidden">
      <div>
        <label>New Password:</label>
        <input type="password" id="newPassword" required>
      </div>
      <div>
        <label>Confirm Password:</label>
        <input type="password" id="confirmPassword" required>
      </div>
      <button type="button" id="setPasswordBtn">Set Password</button>
    </div>
  </form>

  <p id="message"></p>

  <script>
    const verifyBtn = document.getElementById("verifyBtn");
    const setPasswordBtn = document.getElementById("setPasswordBtn");
    const passwordFields = document.getElementById("passwordFields");
    const message = document.getElementById("message");

    // Verify OTP
    verifyBtn.addEventListener("click", async () => {
      const otp = document.getElementById("otp").value;

      const res = await fetch("/api/reset-password/verify", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ otp })
      });

      const data = await res.json();
      if (res.ok) {
        message.textContent = "OTP Verified. Enter your new password.";
        passwordFields.classList.remove("hidden");
      } else {
        message.textContent = data.message;
      }
    });

    // Set new password
setPasswordBtn.addEventListener("click", async () => {
  const newPassword = document.getElementById("newPassword").value;
  const confirmPassword = document.getElementById("confirmPassword").value;
  const otp = document.getElementById("otp").value;

  // Check minimum length
  if (newPassword.length < 6 || confirmPassword.length < 6) {
    message.textContent = "Password must be at least 6 characters long!";
    return;
  }

  // Check if both match
  if (newPassword !== confirmPassword) {
    message.textContent = "Passwords do not match!";
    return;
  }

  const res = await fetch("/api/reset-password/update", {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({ otp, newPassword })
  });

  const data = await res.json();
  message.textContent = data.message;

  if (res.ok) {
    alert("Password successfully updated. Redirecting to login.");
    window.location.href = "login.html";
  }
});

  </script>
</body>
</html>
